.authform
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    %h1 Change password
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    %hr.dashed
    .form-group
      %span.input.input--isao
        = f.password_field :password, class: 'input__field input__field--isao', id: 'input-38', :type => "password"
        %label.input__label.input__label--isao{"data-content" => "New password", :for => "input-38"}
          %span.input__label-content.input__label-content--isao New password
      %span.input.input--isao
        = f.password_field :password_confirmation, class: 'input__field input__field--isao', id: 'input-38', :type => "password"
        %label.input__label.input__label--isao{"data-content" => "New password repeat", :for => "input-38"}
          %span.input__label-content.input__label-content--isao New password repeat
    %br
    = f.submit 'Change my Password', id: 'primary-button'
