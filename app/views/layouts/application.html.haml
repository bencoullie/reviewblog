!!!
%html
  %head
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Musicblog'
    %meta{name: "description", content: "#{content_for?(:description) ? yield(:description) : 'Musicblog'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico'
    %link{href: "http://fonts.googleapis.com/css?family=Roboto:900,400,500,300", rel: "stylesheet", type: "text/css"}
  %body{class: "#{controller_name} #{action_name}"}
    %header
      = render 'layouts/navigation'
    %main{role: "main"}
      = render 'layouts/messages'
      = yield
