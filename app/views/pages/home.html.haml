.container
	.row
		.icon-thumbs-up-alt
		.col-md-12
			- if @posts.any?
				- @posts.each do |post|
					.well
						%p= post.title
						%p= post.content
						%p
							= post.reading_time
							mins
						.well
							%p
								written by:
								= link_to post.user do
									= post.user.email
								on
								= post.created_at.strftime('%B %Y')
								%br
								= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
			- else
				%h1 No posts

		#tag_cloud
			- tag_cloud Post.tag_counts, %w{s m l} do |tag, css_class|
				= link_to tag.name, tag_path(tag.name), class: css_class
