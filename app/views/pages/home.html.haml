.container-fluid
	.row
		.grid
			- if @posts.any?
				- @posts.each_with_index do |post, index|
					- if index == 0
						.grid-item.primary-item
							.well
								= link_to post do
									=image_tag post.background.url(:full)
									%p= post.title
									%p= post.subtitle
									%p
										= post.reading_time
										mins
									.well
										%p
											written by:
											= link_to post.user do
												= post.user.email
											on
											= post.created_at.strftime('%B %Y')
											%br
											= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
					- elsif index % 3 == 0
						.grid-item
							.well
								= link_to post do
									=image_tag post.background.url(:tall)
									%p= post.title
									%p= post.subtitle
									%p
										= post.reading_time
										mins
									.well
										%p
											written by:
											= link_to post.user do
												= post.user.email
											on
											= post.created_at.strftime('%B %Y')
											%br
											= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
					- else
						.grid-item
							.well
								= link_to post do
									=image_tag post.background.url(:tile)
									%p= post.title
									%p= post.subtitle
									%p
										= post.reading_time
										mins
									.well
										%p
											written by:
